<div class="uk-card">
  <div class="uk-card-header">
    <div class="uk-grid-small uk-flex-middle" uk-grid>
      <div class="uk-width-auto">
        {{#if author.profile_image}}
        <img class="uk-border-circle" width="80" height="80" src="{{author.profile_image}}">
        {{/if}}
      </div>
      <div class="uk-width-expand">
        <h1 class="uk-card-title uk-margin-remove-bottom">{{title}}</h1>
        <p class="uk-text-meta uk-margin-remove-top uk-margin-remove-bottom">Posted by {{author.name}} on <time class="updated" datetime="{{date published_at format='MMMM, DD YYYY'}}" pubdate="">{{date published_at format='MMMM, DD YYYY'}}</time></p>
        <p class="uk-text-meta uk-margin-remove-top uk-margin-remove-bottom">{{tags separator=" &bull; " prefix="Tagged in: "}}</p>
        <p class="uk-text-meta uk-margin-remove-top uk-margin-remove-bottom">Find more posts by{{#author}}<a href="{{url}}"> {{name}}</a> â€¢ Social:{{#if twitter}}<a href="{{twitter_url}}"> <i class="fab fa-twitter-square"></i></a>{{/if}}{{#if facebook}}<a href="{{facebook_url}}"> <i class="fab fa-facebook-square"></i></a>{{/if}}{{/author}}</p>
      </div>
    </div>
  </div>
  <div class="uk-card-body">
    <p>{{content}}</p>
  </div>
</div>
