<div class="uk-card">
  <div class="uk-card-header">
    <div class="uk-grid-small uk-flex-middle" uk-grid>
      <div class="uk-width-auto">
        {{#if author.profile_image}}
        <img class="uk-border-circle" width="80" height="80" src="{{author.profile_image}}">
        {{/if}}
      </div>
      <div class="uk-width-expand">
        <h3 class="uk-card-title uk-margin-remove-bottom">{{title}}</h3>
        <p class="uk-text-meta uk-margin-remove-top uk-margin-remove-bottom">
          Posted by {{author.name}} on <time class="updated" datetime="{{date published_at format='MMMM, DD YYYY'}}" pubdate="">{{date published_at format='MMMM, DD YYYY'}}</time>
        </p>
        <p  class="uk-text-meta uk-margin-remove-top">{{tags separator=" &bull; " prefix="Tagged in: "}}</p>
      </div>
    </div>
  </div>
  <div class="uk-card-body">
    <p>{{content}}</p>
  </div>
</div>
